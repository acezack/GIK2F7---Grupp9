{{#layout}} <!–– template layout.mustache kommer "dra in" nedanstånde html kod till sin body––>

<h2 class="heading-sections">Admin</h2>
<div class="a_news_item__menu" >
    <a href="/orreskogenskickers//formlaggtillnyhet/" class="news_item__admin_menu">Skriv en nyhet</a>
</div>
<br><br>
<p>Visar alla nyheter. Totalt: {{countnews}} stycken</p>

<div class="main_content">

{{#adminnews}}

    <div class="a_news_item">
        <h5 class="news_item__headingfrontpage">{{heading}}</h5>
        <p>Av: <a href="mailto: {{addedBy.email}}">{{addedBy.firstName}} {{addedBy.lastName}}</a> |
            {{date}}</p>
        <div class="news_item__text2">{{text}}...
        </div>
        <div class="news_item__headingfrontpage--button"><a href="/orreskogenskickers/nyheter/?newsId={{newsId}}">Läs mer</a>
        </div>
        <div class="a_news_item__menu" >
            <a href="/orreskogenskickers/nyheter/?updateNewsId={{newsId}}" class="news_item__admin_menu">Uppdatera</a>
            <a href="/orreskogenskickers/nyheter/eraseNewsId={{newsId}}" class="news_item__admin_menu">Ta bort</a>
        </div>
    </div>

{{/adminnews}}

</div>
